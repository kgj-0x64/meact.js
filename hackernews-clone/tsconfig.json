{
  "include": [
    "index.ts",
    "middleware.ts",
    "constants/*.ts",
    "server/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@meact",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@meact/jsx-runtime": ["./meact/jsx-runtime.d.ts"],
      "@meact": ["./meact/index.d.ts"]
    },

    // Esbuild takes care of building everything in `npm run build`.
    "noEmit": true
  }
}
